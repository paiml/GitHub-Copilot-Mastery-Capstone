{
  "name": "@pretendco/invoice-reconciliation",
  "version": "1.0.0",
  "exports": "./src/main.ts",
  "nodeModulesDir": "auto",
  "tasks": {
    "dev": "deno run --watch --allow-all src/main.ts",
    "test": "DENO_JOBS=1 deno test --allow-all --coverage=coverage",
    "test:unit": "deno test --allow-all tests/unit/ --coverage=coverage",
    "test:e2e": "DENO_JOBS=1 deno test --allow-all tests/e2e/",
    "coverage": "deno coverage coverage --lcov > coverage.lcov",
    "mutation": "deno run --allow-read --allow-write --allow-run tests/mutation/run_mutation_tests.ts",
    "bench": "deno bench --allow-all",
    "check": "deno check **/*.ts",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "quality": "deno task fmt && deno task lint && deno task check && deno task test"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.0",
    "@std/testing": "jsr:@std/testing@^1.0.0",
    "@std/http": "jsr:@std/http@^1.0.0",
    "@std/log": "jsr:@std/log@^1.0.0",
    "zod": "https://deno.land/x/zod@v3.22.4/mod.ts",
    "hono": "https://deno.land/x/hono@v3.11.7/mod.ts"
  },
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "strictNullChecks": true
  },
  "fmt": {
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-explicit-any"]
    }
  }
}
